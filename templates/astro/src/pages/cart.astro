---
import Header from '../components/Header.astro'
import Container from '../components/Container.astro'

import { getCart } from '../models/cart'
import { getUserId } from '../models/session'

const userId = getUserId(Astro.request)
if (!userId) {
  // They must be logged in.
  return Astro.redirect('/')
}

const user = { name: 'test' } // getUser?
const cart = await getCart(userId)
---

<html>
  <head>
    <title>Cart | Online Store</title>
    <style>
      h1 {
        font-size: 36px;
      }
    </style>
  </head>
  <body>
    <Header />

    <Container tag="main">
      <h1>Cart</h1>
      <p>Hi {user.name}! Here are your cart items:</p>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody>
          {
            cart.items.map((item) => (
              <tr>
                <td>{item.name}</td>
                <td>{item.count}</td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </Container>
  </body>
</html>
